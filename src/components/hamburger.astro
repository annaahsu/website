<svg id="x" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 36 36" height="36" width="36" onclick="">
  <g class="top-bars" stroke-width="4">
    <path class="bar bar1" d="M 6,8 H 30" />
    <path class="bar bar2" d="M 6,17 H 30" />
  </g>
</svg>

<style lang="scss">
  .top-bars {
    stroke: var(--med);
    transition: stroke 400ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .bar {
    transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
  }

  .bar1 {
    transform-origin: 18px 8.5px;
  }

  .bar2 {
    transform-origin: 18px 16.5px;
  }

  .active .bar1 {
    transform: translateY(8.6px) rotate(45deg);
  }

  .active .bar2 {
    transform: rotate(-45deg);
  }

  @media (prefers-reduced-motion: reduce) {
    .active .bar1 {
      transform: none;
    }

    .active .bar2 {
      transform: none;
    }
  }
</style>

<script>
  let hamburger = document.getElementById("x");
  hamburger.addEventListener("click", () => {
    hamburger.classList.toggle("active");
  });
</script>

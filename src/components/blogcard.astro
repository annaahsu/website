---
export interface Props {
  post: any;
}

const { post } = Astro.props;

const newDate = new Date(post.frontmatter.publishDate);
const options = { year: 'numeric', month: 'long', day: 'numeric' };
const formatDate = newDate.toLocaleDateString('en-US', options)
---

<article class="card">
  <a class="cardlink" href={post.url}>
    <div class="content">
      <header>
        <h1 class="title">{post.frontmatter.title}</h1>
        <span class="date">{formatDate}</span>
      </header>
      <p>{post.frontmatter.description}</p>
    </div>
  </a>
</article>

<style lang="scss">
  .card:hover {
    transform: scale(1.01);
    transition: 0.5s;
  }

  .cardlink {
    color: inherit;
    text-decoration: none;
    box-shadow: none;
    padding: 0px;
    transition: none;
    font-weight: inherit;
  }

  .cardlink:hover {
    background: none;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 16px;
    padding: 24px;
    background-color: var(--white);
    box-shadow: var(--carddrop);
  }

  .date {
    font-style: oblique;
  }
</style>
